{
  "name": "Lunette",
  "version": "2.6.1",
  "manifest_version": 3,
  "description": "Chrome extension that filters blue light directly in the browser",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon-16.png",
    "default_popup": "popup.html"
  }
}
